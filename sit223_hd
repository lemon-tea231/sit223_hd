pipeline
{
    agent any
    tools {
        maven 'maven 3.8.5'
        nodejs 'nodejs'
    }
    stages {
        stage('Build')
        {
            echo 'Compiling Java files...'
                sh 'mkdir -p target'
                sh 'javac -d target src/*.java'

                echo 'Creating JAR file...'
                sh 'jar cf target/myapp.jar -C target .'

                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
        }
    }

}
