pipeline
{
    agent any
    tools {
        maven 'maven 3.8.5'
        nodejs 'nodejs'
    }
    stages {
        stage('Build')
        {
            steps{
                echo'Building the JAR file or Docker image ....'
                
                sh 'ls -la'
                sh 'mvn -f path/to/pom.xml <goals> ...'
                
            }
        }
    }

}
